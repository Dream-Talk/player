.zan-popup {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    top: 0;
    background-color: rgba(5,5,5,.8);
}

.zan-popup__container {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 450rpx;
    background-color: rgb(241,241,241);
}

.title {
    margin-top: 10rpx;
    text-align: center;
    color: #FD6065;
    height: 120rpx;
    line-height: 120rpx;
}

.cancel {
    position: fixed;
    width: 100%;
    bottom: 0;
}

.cancel .button {
    text-align: center;
    height: 100rpx;
    width: 100%;
    line-height: 100rpx;
    font-size: 45rpx;
    background-color: #fff;
    color: #000000;
}

.share-wrapper {
    transform: translateY(60rpx);
    margin: 20rpx;
    display: flex;
    width: 85%;
    margin: 0 auto;
}

.shareButton {
    margin-left: 0;
    margin-right: 0;
    padding-left: 0;
    padding-right: 0;
    font-size: 16px;
    background-color: transparent;
}

.shareButton::after {
    border: none;
}

.share-item {
    text-align: center;
    flex: 1;
    margin: 30rpx 30rpx;
    width: 140rpx;
}

.share-item-avatar>image {
    width: 110rpx;
    height: 110rpx;
    border-radius: 50%;
}

