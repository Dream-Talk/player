page {
    background-color: #f2f2f2;
}

.line {
    display: flex;
    flex-direction: row;
    justify-content: center;
}

input {
    height: 2.5em;
    line-height: 2.5em;
}

.contain {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.zan-form__title {
    max-width: 70%;
    width: auto;
    margin-right: 10rpx;
}

.zan-form__textarea {
    width: auto;
    height: 4.2em;
    line-height: 1.4em;
    align-items: auto!important;
}

.weui-select {
    border-right: none;
}

.weui-select-noHeight {
    position: relative;
    padding-right: 30px;
    min-height: 2.58823529em;
    line-height: 2.58823529em;
}

.weui-select-noHeight:before {
    content: " ";
    display: inline-block;
    height: 6px;
    width: 6px;
    border-width: 2px 2px 0 0;
    border-color: #C8C8CD;
    border-style: solid;
    transform: matrix(0.71,0.71,-0.71,0.71,0,0);
    position: relative;
    top: -2px;
    position: absolute;
    top: 50%;
    right: 0;
    margin-top: -4px;
}

.fixButton button::after {
    border: none;
}

.name {
    width: 470rpx;
    font-size: 32rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.star {
    font-size: 24rpx;
    color: #a3a3a3;
}

.text {
    width: 500rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    color: #a3a3a3;
}

.content.text {
    letter-spacing: 1pt;
    font-size: 26rpx;
}

.tuijian {
    position: fixed;
    top: 0;
    left: 0;
    width: 750rpx;
    height: 100vh;
    background-color: rgba(0,0,0,0.5);
}

.guanzhu {
    position: fixed;
    top: 100rpx;
    right: 0;
    margin: 20rpx;
    z-index: 98;
}

.haowan {
    position: fixed;
    bottom: 400rpx;
    right: 0;
    margin: 20rpx;
    z-index: 98;
}

.guanzhu image,.haowan image {
    width: 120rpx;
    height: 120rpx;
}

.kaiping {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translateX(-50%) translateY(-50%);
    z-index: 97;
}

.gzclassw {
    position: fixed;
    top: -50vh;
}