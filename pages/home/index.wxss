/* pages/home/index.wxss */
.container{
  display: flex;
  flex-wrap: wrap;
}
.search-group{
  display: flex;
  /* flex-flow: row nowrap; */
  direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
  padding: 10rpx;
  background-color: #FCFCFC;
  margin-left: 10rpx;
}
.search-input{
  flex: 1;
}
.search-icon{
  width: 40rpx;
  height: 40rpx;
}
.search-icon image{
  width: 40rpx;
  height: 40rpx;
}
/* 精选测评部分 */
.grid-box{
  display: felx;

}
.grid-top{
  margin: 10rpx;
  padding:10rpx;
  font-size: 30rpx;
  font-weight: bold;
  border-bottom: 8rpx solid #FFD700;
  border-bottom-width: 15rpx;
  padding-bottom: 10px
}
.grid-content{
  padding: 10rpx;
}
.row{
  display: flex;
  justify-content: space-between;

}
.grid-item{
 display: flex;
 width: 150rpx;
 height: 200rpx;
 flex-wrap: wrap;
 align-content: center;
}
.grid-item .item-picture{
 width:150rpx;
 height:150rpx;
 border-radius: 30rpx;
}
.item-title{
  display: flex;
  height:40rpx;
  width: 150rpx;
  white-space:nowrap;
  overflow: hidden;
  text-overflow:ellipsis;
  justify-content: center;
  font-weight: bold;
}
/* 全部测试部分 */
.wrap-title{
  margin: 10rpx;
  padding:10rpx;
  font-size: 30rpx;
  font-weight: bold;
  border-bottom: 8rpx solid #FFD700;
  border-bottom-width: 15rpx;
  padding-bottom: 10px
}
.list-box{
display: flex;
flex-wrap: wrap;
}
.list-item{
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-start;
  border-bottom: 8rpx solid rgb(231, 231, 226);
  padding-bottom: 3px;
  margin-left: 10rpx;
  align-items: center;
}
.item-detail{
  flex: 1;
}
.list-item .item-picture{
  width: 150rpx;
  height: 150rpx;
  margin-right: 10rpx;
}
.list-item .desc{
  height: 50rpx;
}
.list-item .line{
  margin-top: 10rpx;
  height: 50rpx;
  color: rgb(201, 200, 200);


}
.list-item .title{
  margin-top: 10rpx;
  height: 50rpx;
  font-weight: bold;
}
