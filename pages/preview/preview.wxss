.bubble {
    display: inline-block;
    position: absolute;
    left: 50%;
    top: -60rpx;
    transform: translateX(-50%);
    width: 300rpx;
    height: 50rpx;
    line-height: 50rpx;
    color: #fff;
    font-size: 28rpx;
    border-radius: 40rpx;
    background-color: rgba(0,0,0,0.5);
}

.bubble::after {
    content: "";
    position: absolute;
    left: 50%;
    bottom: -10px;
    transform: translateX(-50%);
    border: 5px solid transparent;
    border-top-color: rgba(0,0,0,0.5);
}

@-webkit-keyframes _scale {
    from {
        transform: scale(1);
    }

    60% {
        transform: scale(1);
    }

    80% {
        transform: scale(1.1);
    }

    to {
        transform: scale(1);
    }
}

@keyframes _scale {
    from {
        transform: scale(1);
    }

    60% {
        transform: scale(1);
    }

    80% {
        transform: scale(1.1);
    }

    to {
        transform: scale(1);
    }
}

._scale {
    animation-name: _scale;
    animation-duration: 1s;
    animation-iteration-count: infinite;
    animation-timing-function: ease-out;
}

