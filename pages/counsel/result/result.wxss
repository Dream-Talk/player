.box {
    margin: 0 30rpx;
    margin-top: 30rpx;
    padding: 0 30rpx;
    padding-top: 30rpx;
    background-color: #fff;
    border-radius: 8rpx;
    box-shadow: 1px 1px 5px 5px #e5e5e5;
}

.title {
    font-size: 38rpx;
    text-align: center;
}

.banner {
    width: 100%;
    margin: 10rpx auto;
}

.descript {
    font-size: 28rpx;
    color: #acacac;
    line-height: 1.8;
}

.name {
    width: 470rpx;
    font-size: 32rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.star {
    line-height: 60rpx;
    font-size: 24rpx;
    color: #acacac;
}

.share-wrapper {
    position: fixed;
    bottom: 0;
    top: 0;
    left: 0;
    right: 0;
    z-index: 10001;
    width: 100%;
}

.questions {
    position: relative;
    width: 750rpx;
    height: 100vh;
}

.question {
    position: absolute;
    top: 3%;
    right: 7.5%;
    width: 85%;
    height: 90%;
    padding-top: 30rpx;
    background-color: #fff;
    border-radius: 8rpx;
    box-sizing: border-box;
    box-shadow: 1px 1px 5px 5px #e5e5e5;
    transition: 1s all ease;
}

.answer {
    position: relative;
    padding: 30rpx 0;
}

.answer::after {
    content: "";
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    border-bottom: 1px solid #f2f2f2;
}

.circle {
    width: 30rpx;
    height: 30rpx;
    border: 2rpx solid #09bb07;
    border-radius: 18rpx;
}

.select {
    background-color: #09bb07;
}

.submit {
    position: absolute;
    left: 50%;
    bottom: 3%;
    width: 80%;
    height: 80rpx;
    line-height: 80rpx;
    color: #fff;
    text-align: center;
    border-radius: 6rpx;
    background-color: #09bb07;
    transform: translateX(-50%);
}

.shareButton {
    margin-left: 0;
    margin-right: 0;
    padding-left: 0;
    padding-right: 0;
    font-size: 16px;
    background-color: transparent;
}

.shareButton::after {
    border: none;
}

button::after {
    content: '';
    border: none;
}

.left1 {
    opacity: 0;
    transform: translateX(-104%) scale(1,0.9);
    z-index: 1;
}

.left2 {
    opacity: 0.5;
    transform: translateX(-104%) scale(1,0.9);
    z-index: 2;
}

.current {
    opacity: 1;
    transform: scale(1,1);
    z-index: 5;
}

.right1 {
    opacity: 0.5;
    transform: translateX(104%) scale(1,0.9);
    z-index: 2;
}

.right2 {
    opacity: 0;
    transform: translateX(104%) scale(1,0.9);
    z-index: 1;
}

.bubble {
    display: inline-block;
    position: absolute;
    left: 50%;
    top: -60rpx;
    transform: translateX(-50%);
    width: 300rpx;
    height: 50rpx;
    line-height: 50rpx;
    color: #fff;
    font-size: 28rpx;
    border-radius: 40rpx;
    background-color: rgba(0,0,0,0.5);
}

.bubble::after {
    content: "";
    position: absolute;
    left: 50%;
    bottom: -10px;
    transform: translateX(-50%);
    border: 5px solid transparent;
    border-top-color: rgba(0,0,0,0.5);
}

@-webkit-keyframes _scale {
    from {
        transform: scale(1);
    }

    60% {
        transform: scale(1);
    }

    80% {
        transform: scale(1.1);
    }

    to {
        transform: scale(1);
    }
}

@keyframes _scale {
    from {
        transform: scale(1);
    }

    60% {
        transform: scale(1);
    }

    80% {
        transform: scale(1.1);
    }

    to {
        transform: scale(1);
    }
}

._scale {
    animation-name: _scale;
    animation-duration: 1s;
    animation-iteration-count: infinite;
    animation-timing-function: ease-out;
}

.ad {
    margin: 10 auto;
}

.haowan button {
    flex: 1;
    min-width: 330rpx;
    height: 88rpx;
    line-height: 88rpx;
    margin-left: 30rpx;
    color: #8b51f4;
    font-size: 36rpx;
    border: 1px solid #8b51f4;
}

.guanzhu {
    position: fixed;
    top: 100rpx;
    right: 0;
    margin: 20rpx;
